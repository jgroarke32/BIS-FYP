@model ClientMk1.Models.IndivPriSchool

<!DOCTYPE html>
<html>
<head>
    <link type="text/css" rel="stylesheet" href="~/Content/Site.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.css" />
    <script type="text/javascript" src="~/Scripts/jquery-3.1.1.js"></script>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type='text/javascript' src="~/Scripts/knockout-3.4.0.js"></script>
    <script type="text/javascript" src="/Scripts/gmaps.js"></script>
    
    <meta name="viewport" content="width=device-width" />
    @{
        ViewBag.Title = Html.DisplayFor(model => model.Name);
    }
    <style>
        #map {
            height: 350px;
            width: 50%;
        }

    </style>
    <style>    
        .pieChartDiv {
            padding: 0;
            float: left;
            width: 100%;
            min-height: 400px;
            border: 1px solid white;
        }

        .lineChartDiv {
            float: left;
            width: 100%;
            min-height: 400px;
            border: 1px solid white;
        }

        .infoform {
            width: 50%;
            float: left;         
        }

        @@media screen and (max-width: 767px) {
            .infoform {
                width: 100%;
            }

            #map {
                width: 100%;
            }

            .pieChartDiv {
                width: inherit;
            }

            .lineChartDiv {
                width: inherit;
                /*overflow: scroll;*/
            }
            html {
            width: 600px;
        }
        }
    </style>
</head>
<body style="width:80%; margin-left:10%; padding-top:50px">

    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAvIWVTpJmbCdIfhxfe31Z3w3iXkvR-JG8&callback=initMap">
