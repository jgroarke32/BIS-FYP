                        </td>
                        <td class="display-field btnbrdr">
                            @Html.DisplayFor(model => model.County)
                        </td>
                    </tr>
                    <tr>
                        <td class="display-label btnbrdr">
                            @Html.DisplayNameFor(model => model.DEIS):
